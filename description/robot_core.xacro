<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.5 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <!-- Base link -->
    <link name="base_link">
     
    </link>

    <!-- Chassis Link -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.08 0 -0.021"/>    
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.08 0 0.0625"/>
            <geometry>
                <cylinder radius="0.08" length="0.125"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.08 0 0.0625"/>
            <geometry>
                <cylinder radius="0.08" length="0.125"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.125" radius="0.08">
            <origin xyz="0.08 0 0.0625"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- Left Wheel Link-->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.055 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.031" length="0.006"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.031" length="0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.125" radius="0.08">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- right Wheel Link-->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.055 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.031" length="0.006"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.031" length="0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.125" radius="0.08">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- caster Wheel link -->
    <joint name="caster_wheel_joint_back" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_back"/>
        <origin xyz="0 0 0" />
    </joint>

    <link name="caster_wheel_back">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.01">
            <origin xyz="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_back">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- caster Wheel link -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0 0 0" />
    </joint>

    <link name="caster_wheel">
        <visual>
            <origin xyz="0.150 0 0"/>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.150 0 0"/>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.01">
            <origin xyz="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>